<!DOCTYPE html>
<meta charset="utf-8">

<!-- Load d3.js -->
<script src="https://d3js.org/d3.v4.js"></script>

<br>
<div class="uk-container uk-container-large">
    <h3 class="uk-text-primary">During my internship at Belvedere Trading, I began playing poker quite competitively.</h3>
    <h5 class="uk-text-primary">Here I'll track my profitability.</h5>
</div>
<br>

<!-- Create a div where the graph will take place -->
<div id="my_dataviz"></div>

  <script>
    // set the dimensions and margins of the graph
    var margin = {
        top: 20,
        right: 20,
        bottom: 30,
        left: 50
      },
      width = 960 - margin.left - margin.right,
      height = 500 - margin.top - margin.bottom;

    // parse the date / time
    var parseTime = d3.timeParse("%m-%d-%y");

    // set the ranges
    var x = d3.scaleTime().range([0, width]);
    var y = d3.scaleLinear().range([height, 0]);

    // define the line
    var valueline = d3.line()
      .x(function(d) {
        return x(d.date);
      })
      .y(function(d) {
        return y(d.close);
      });

    // append the svg obgect to the body of the page
    // appends a 'group' element to 'svg'
    // moves the 'group' element to the top left margin
    var svg = d3.select("body").append("svg")
      .attr("width", width + margin.left + margin.right)
      .attr("height", height + margin.top + margin.bottom)
      .append("g")
      .attr("transform",
        "translate(" + margin.left + "," + margin.top + ")");

    var data = [
    {
        "date": "06-07-20",
        "close": 34
    },
    {
        "date": "06-09-20",
        "close": 55
    }
    ];

    // format the data
    data.forEach(function(d) {
      d.date = parseTime(d.date);
      d.close = +d.close;
    });

    // Scale the range of the data
    x.domain(d3.extent(data, function(d) {
      return d.date;
    }));
    y.domain([d3.min(data, function(d) {return d.close}), d3.max(data, function(d) {
      return d.close;
    })]);

    // Add the valueline path.
    svg.append("path")
      .data([data])
      .attr("class", "line")
      .attr("d", valueline)
      .style("fill", "none")
      .style("stroke", "steelblue");

    // Add the X Axis
    var axis = svg.append("g")
      .attr("transform", "translate(0," + height + ")")
      .call(d3.axisBottom(x));

    make_silver(axis);

    // Add the Y Axis
    var axis = svg.append("g")
      .call(d3.axisLeft(y));
    make_silver(axis);

function make_silver(axis) {
    axis.selectAll("line")
      .style("stroke", "silver")

    axis.selectAll("path")
      .style("stroke", "silver")

    axis.selectAll("text")
      .style("stroke", "silver")
}
  </script>



